.form
  = form_for @user do |f|
    = render 'common/error_messages', object: f.object
    .form-field
      = f.label :email, 'Электронная почта', class: 'form-label'
      = f.text_field :email, class: 'form-text-field'
    .form-field
      = f.label :username, 'Никнейм', class: 'form-label'
      = f.text_field :username, class: 'form-text-field'
    .form-field
      = f.label :name, 'Имя', class: 'form-label'
      = f.text_field :name, class: 'form-text-field'
    - if current_user
      .form-field
        = f.label :avatar_url, 'URL вашей аватары', class: 'form-label'
        = f.text_field :avatar_url, class: 'form-text-field'
      .column-1-3
        .form-field
          = f.label :bgcolor, 'Фон страницы', class: 'form-label'
          = f.color_field :bgcolor, value: bgcolor(@user), class: 'form-color-field'
      .column-1-3
        .form-field
          = f.label :fontcolor, 'Шрифт', class: 'form-label'
          = f.color_field :fontcolor, value: fontcolor(@user), class: 'form-color-field'
      .column-1-3
        .form-field
          = f.label :bordercolor, 'Кайма аватара', class: 'form-label'
          = f.color_field :bordercolor, value: bordercolor(@user), class: 'form-color-field'
    .form-field
      = f.label :password, 'Пароль', class: 'form-label'
      = f.password_field :password, class: 'form-text-field'
    .form-field
      = f.label :password_confirmation, 'Подтверждение пароля', class: 'form-label'
      = f.password_field :password_confirmation, class: 'form-text-field'
    .form-action
      = f.submit yield(:submit_button), class: 'button button-small button-dark'
